@page
@using DoAnMonHoc_23880108.LuuTru;
@using DoAnMonHoc_23880108.NghiepVu;
@using DoAnMonHoc_23880108.Entity;

@model DoAnMonHoc_23880108.Pages.MH_QuanLyThongKeTonKhoModel
@{
	string username = HttpContext.Session.GetString("username")!;
	if (string.IsNullOrEmpty(username))
	{
		Response.Redirect("/MH_TrangChu");
	}
	else
	{
		string[] ds;
		ds = XuLyDanhMucNhapHang.DocDanhSachTenHangNhap();

		<p style=" text-align:center; font-size:larger; font-weight: bold">DANH SÁCH MẶT HÀNG CÒN LẠI TRONG KHO</p>

		<div>
			<table>
				<tr>
					<th>STT</th>
					<th>Tên Hàng</th>
					<th>Số lượng hiện có</th>
				</tr>
				@for (int i = 0; i < ds.Length; i++)
				{
					<tr>
						<td>@(i + 1)</td>
						<td>@ds[i]</td>
						<td>@XuLyThongKe.SoLuongHangConLai(ds[i])</td>
					</tr>
				}
			</table>
		</div>
	}
}