@page
@using DoAnMonHoc_23880108.LuuTru;
@using DoAnMonHoc_23880108.NghiepVu;
@using DoAnMonHoc_23880108.Entity;

@model DoAnMonHoc_23880108.Pages.MH_QuanLyThongKeHetHanModel
@{
	string username = HttpContext.Session.GetString("username")!;
	if (string.IsNullOrEmpty(username))
	{
		Response.Redirect("/MH_TrangChu");
	}
	else
	{
		MatHang[] ds;
		ds = XuLyThongKe.DocDanhSachMatHangHetHan();

		<p style=" text-align:center; font-size:larger; font-weight: bold">DANH SÁCH MẶT HÀNG ĐÃ HẾT HẠN SỬ DỤNG</p>

		<div>
			<table>
				<tr>
					<th>STT</th>
					<th>Mã Hàng</th>
					<th>Tên Hàng</th>
					<th>Loại Hàng</th>
					<th>Công ty Sản Xuất</th>
					<th>Ngày Sản Xuất</th>
					<th>Hạn Sử Dụng</th>
					<th>Giá (VNĐ)</th>
				</tr>
				@for (int i = 0; i < ds.Length; i++)
				{
					<tr>
						<td>@(i + 1)</td>
						<td>@ds[i].Ma</td>
						<td>@ds[i].Ten</td>
						<td>@ds[i].Loai</td>
						<td>@ds[i].CongTySX</td>
						<td>@ds[i].NSX</td>
						<td>@ds[i].HSD</td>
						<td>@ds[i].Gia.ToString("#,##0")</td>
					</tr>
				}
			</table>
		</div>
	}
}

